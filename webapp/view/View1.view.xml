<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    controllerName="zjblessonsLesson9.controller.View1"
    displayBlock="true">

    <App>
        <pages>
            <Page id="registrationPage" showHeader="true" showNavButton="false">
                <headerContent>
                    <Bar>
                        <contentMiddle>
                            <Title text="{i18n>registrationTitle}" />
                        </contentMiddle>
                        <contentRight>
                            <Image src="src/img/chibi-pochita-logo.png" width="auto" height="60px"
                                press="onLogoPress" />
                        </contentRight>
                    </Bar>
                </headerContent>
                <content>
                    <VBox id="messageStripContainer" />
                    <ScrollContainer width="100%" height="100%" horizontal="false" vertical="true">
                        <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" columnsL="1">
                            <Label text="{i18n>labelName}" />
                            <Input id="nameInput" maxLength="64" required="true" liveChange="onInputLiveChange"
                                valueStateText="{i18n>valueStateName}" />
                            <Label text="{i18n>labelSurname}" />
                            <Input id="surnameInput" maxLength="64" required="true" liveChange="onInputLiveChange"
                                valueStateText="{i18n>valueStateSurname}" />
                            <Label text="{i18n>labelCity}" />
                            <Select enabled="{/Enabled}" editable="{/Editable}" forceSelection="false" id="citySelect"
                                selectedKey="{/SelectedCity}" items="{
                            path: '/CityCollection',
                            sorter: { path: 'Name' }
                        }">
                                <core:Item key="{CityId}" text="{Name}"></core:Item>
                            </Select>
                            <Label text="{i18n>labelPhone}" />
                            <Input id="phoneInput" maxLength="13" required="true" liveChange="onInputLiveChange"
                                valueStateText="{i18n>valueStatePhone}" />
                            <Label text="{i18n>labelEmail}" />
                            <Input id="emailInput" maxLength="256" required="true" liveChange="onInputLiveChange"
                                valueStateText="{i18n>valueStateEmail}" />
                            <Label text="{i18n>labelPassword}" />
                            <Input id="passwordInput" type="Password" maxLength="64" required="true"
                                liveChange="onInputLiveChange" placeholder="{i18n>placeholderPassword}"
                                valueStateText="{i18n>valueStatePassword}" />
                            <Label text="{i18n>labelConfirmPassword}" />
                            <Input id="confirmPasswordInput" type="Password" maxLength="64" required="true"
                                liveChange="onInputLiveChange" valueStateText="{i18n>valueStateConfirmPassword}" />
                            <Label text="{i18n>labelPromoCode}" />
                            <Input id="promocodeInput" value="{/promocodeValue}"
                                enabled="{/promoCodeEnabled}" /><Label />
                            <HBox width="100%">
                                <CheckBox id="agreementCheckbox" text=""
                                    selected="{state>/agreementChecked}" />
                                <FormattedText htmlText="{/CheckboxText}" class="agreementText"/>
                            </HBox>
                            <Label />
                            <Button id="registerButton" text="{i18n>buttonRegister}" type="Emphasized"
                                enabled="{state>/agreementChecked}" press="onRegister" />
                            <Button text="{i18n>buttonCancel}" type="Default" press="onCancel" />
                        </f:SimpleForm>
                        <layout:BlockLayout id="footerBlockLayout" class="footer-blocklayout" background="Light">
                            <layout:BlockLayoutRow>
                                <layout:BlockLayoutCell title="{i18n>footerAboutUs}" titleAlignment="Center" width="1/3">
                                    <VBox alignItems="Center">
                                        <Image src="src/img/chibi-pochita-logo.png" width="80px" height="80px" />
                                        <Text text="{i18n>footerMotto}" />
                                    </VBox>
                                </layout:BlockLayoutCell>
                                <layout:BlockLayoutCell title="{i18n>footerPolicies}" titleAlignment="Center" width="1/3">
                                    <VBox alignItems="Center">
                                        <Link text="{i18n>footerPrivacyPolicy}" href="./src/pdf/PrivacyPolicy.pdf"
                                            target="_blank" />
                                        <Link text="{i18n>footerUserAgreement}" href="./src/pdf/UsersAgreement.pdf"
                                            target="_blank" />
                                        <Link text="{i18n>footerPlatformRules}" href="./src/pdf/PlatformRules.pdf"
                                            target="_blank" />
                                        <Link text="{i18n>footerReturnPolicy}" href="./src/pdf/RefundPolicy.pdf"
                                            target="_blank" />
                                    </VBox>
                                </layout:BlockLayoutCell>
                                <layout:BlockLayoutCell title="{i18n>footerContacts}" titleAlignment="Center" width="1/3">
                                    <VBox alignItems="Center">
                                        <Text text="{i18n>footerAddress}" />
                                        <Text text="{i18n>footerPhone}" />
                                        <HBox class="social-icons" justifyContent="Center">
                                            <Image src="src/img/Youtube-logo.png" height="24px"
                                                press="onYouTubeIconPress"
                                                class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
                                            <Image src="src/img/Instagram-logo.png" height="24px"
                                                press="onInstagramIconPress"
                                                class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
                                            <Image src="src/img/Telegram-logo.png" height="24px"
                                                press="onTelegramIconPress"
                                                class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
                                        </HBox>
                                    </VBox>
                                </layout:BlockLayoutCell>
                            </layout:BlockLayoutRow>
                        </layout:BlockLayout>
                    </ScrollContainer>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
