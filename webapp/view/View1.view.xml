<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="zjblessonsLesson9.controller.View1" displayBlock="true">

	<App>
		<pages>
			<Page title="Registration form">
				<content>
					<VBox id="messageStripContainer" />
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" columnsL="1">
						<Label text="Имя" />
						<Input id="nameInput" maxLength="64" required="true"
							valueStateText="Введите не более 64 символов" />
						<Label text="Фамилия" />
						<Input id="surnameInput" maxLength="64" required="true"
							valueStateText="Введите не более 64 символов" />
						<Label text="Город" />
						<Select enabled="{/Enabled}" editable="{/Editable}" forceSelection="false" id="citySelect" 
							selectedKey="{/SelectedCity}" items="{
							path: '/CityCollection',
							sorter: { path: 'Name' }
						}">
							<core:Item key="{CityId}" text="{Name}"></core:Item>
						</Select>
						<Label text="Номер телефона" />
						<Input id="phoneInput" maxLength="13" required="true"
							valueStateText="Введите номер в формате +375..." />

						<Label text="Email" />
						<Input id="emailInput" maxLength="256" required="true"
							valueStateText="Введите корректный email" />

						<Label text="Пароль" />
						<Input id="passwordInput" type="Password" maxLength="64" required="true"
							placeholder="Минимум 8 символов, буквы и цифры"
							valueStateText="Пароль должен содержать минимум 8 символов, буквы и цифры" />
						<Label text="Потвердите пароль" />
						<Input id="confirmPasswordInput" type="Password" maxLength="64" required="true"
							valueStateText="Пароли должны совпадать" />
						<Label text="Промокод" />
						<Input id="promocodeInput" value="{/promocodeValue}" enabled="{/promoCodeEnabled}" /><Label />
						<HBox>
							<CheckBox id="agreementCheckbox" text="Я согласен с" selected="{state>/agreementChecked}" />

							<Link href="./pdf/UsersAgreement.pdf" class="sapUiTinyMarginBeginEnd"
								text="условиями пользовательского соглашения" press="onUserAgreementPress" />
							<Text text=" и " />
							<Link href="./pdf/PlatformRules.pdf" class="sapUiTinyMarginBeginEnd"
								text="правилами платформы" press="onPlatformRulesPress" />
						</HBox>
						<Label />
						<Button id="registerButton" text="Зарегистрироваться" type="Emphasized"
							enabled="{state>/agreementChecked}" press="onRegister" />
						<Button text="Отменить" type="Default" press="onCancel" />
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>