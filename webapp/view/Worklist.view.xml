<mvc:View
	controllerName="zjblessons.Lesson4.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Headers',
					sorter: {
						path: 'DocumentDate',
						descending: true
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="false"
				growingThreshold="15"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchFieldDocumentDate"
							placeholder="searchDocumentDate"
							tooltip="{i18n>worklistSearchTooltipDocumentNumber}"
							search="onSearchDocumentDate"
							liveChange="onNewSearchDocumentNumber"
							width="auto">
						</SearchField>
						<SearchField
							id="searchFieldPlantText"
							placeholder="searchPlantText"
							tooltip="{i18n>worklistSearchTooltipPlantText}"
							search="onSearchPlantText"
							liveChange="onNewSearchPlantText"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column id="documentDateColumn">
						<Text text="{i18n>tableDocumentDateColumnTitle}" id="documentDateColumnTitle"/>
					</Column>
					<Column id="plantTextColumn">
						<Text text="{i18n>tablePlantTextColumnTitle}" id="plantTextColumnTitle"/>
					</Column>
					<Column id="regionTextColumn">
						<Text text="{i18n>tableRegionTextColumnTitle}" id="regionTextColumnTitle"/>
					</Column>
					<Column id="descriptionColumn">
						<Text text="{i18n>tableDescriptionColumnTitle}" id="descriptionColumnTitle"/>
					</Column>
					<Column id="createdColumn">
						<Text text="{i18n>tableCreatedColumnTitle}" id="createdColumnTitle"/>
					</Column>
				</columns>
				
				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{DocumentNumber}"/>
							<ObjectIdentifier
								title="{
								path: 'DocumentDate',
								type: 'sap.ui.model.type.Date',
								formatOptions:{
								style: 'short'
								}
								}"/>
							<ObjectIdentifier
								title="{PlantText}"/>
							<ObjectIdentifier
								title="{RegionText}"/>
							<ObjectIdentifier
								title="{Description}"/>
							<ObjectIdentifier
								title="{
								path: 'Created',
								type: 'sap.ui.model.type.Date',
								formatOptions:{
								pattern: 'HH:mm dd/MM/yyyy'
								}
								}"/>
						</cells>
					</ColumnListItem>
					
				</items>
			</Table>
		</semantic:content>


	</semantic:SemanticPage>

</mvc:View>