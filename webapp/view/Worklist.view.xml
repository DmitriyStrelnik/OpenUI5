<mvc:View controllerName="zjblessons.Lesson14.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:dnd="sap.ui.core.dnd" xmlns:controls="zjblessons.Lesson14.controller.controls">


	<Page>
		<controls:CustomATHBox src="src/chibi-pochita-logo.png" initials="ABC"  textAlign="Center" width="70px" backgroundColor="TileIcon" displayShape="Square"
				displaySize="XL" text="User Nickname" maxLines="2" />
		<Table id="table" width="auto" noDataText="{worklistView>/tableNoDataText}" itemPress="onItemSelect"
			busyIndicatorDelay="{worklistView>/tableBusyDelay}">
			<dragDropConfig>
				<dnd:DragDropInfo sourceAggregation="items" targetAggregation="items" dropPosition="Between"
					drop="onDrop" />
			</dragDropConfig>
			<headerToolbar>
				<Toolbar>
					<Title id="tableHeader" text="{= ${worklistView>/sTotal}} entries in the table" />
					<ToolbarSpacer />
					<Button text="{i18n>UseFilter}" press="onApplyFilter" />
					<Button text="{i18n>UsePartialFilter}" press="onApplyPartialFilter" />
					<Button text="{i18n>Sort}" press="onApplySort" />
					<Button text="{i18n>Clear}" press="onClear" />
					<Button icon="{i18n>refreshIcon}" press="onRefresh" />
				</Toolbar>
			</headerToolbar>

			<columns>
				<Column id="order">
					<Text text="{i18n>OrderTitle}" id="orderTitle" />
				</Column>
				<Column id="nameColumn">
					<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle" />
				</Column>
				<Column id="documentDateColumn">
					<Text text="{i18n>tableDocumentDateColumnTitle}" id="documentDateColumnTitle" />
				</Column>
				<Column id="plantTextColumn">
					<Text text="{i18n>tablePlantTextColumnTitle}" id="plantTextColumnTitle" />
				</Column>
				<Column id="regionTextColumn">
					<Text text="{i18n>tableRegionTextColumnTitle}" id="regionTextColumnTitle" />
				</Column>
				<Column id="descriptionColumn">
					<Text text="{i18n>tableDescriptionColumnTitle}" id="descriptionColumnTitle" />
				</Column>
				<Column id="createdColumn">
					<Text text="{i18n>tableCreatedColumnTitle}" id="createdColumnTitle" />
				</Column>
				<Column width="5%" />
			</columns>


		</Table>
	</Page>


</mvc:View>