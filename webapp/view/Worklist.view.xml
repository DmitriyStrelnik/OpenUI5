<mvc:View controllerName="zjblessons.Lesson5.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">


	<Page>
		<Table id="table" width="auto" noDataText="{worklistView>/tableNoDataText}"
			busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="false"
			growingThreshold="15">

			<headerToolbar>
				<Toolbar>
					<Title id="tableHeader" text="{= ${worklistView>/sTotal}} entries in the table" />
					<ToolbarSpacer />

					<DateRangeSelection id="dateRangeSelection" change="_onDateRangeChange" delimiter="to"
						displayFormat="yyyy-MM-dd" width="auto" />
					<Button icon="{i18n>createIcon}" press="onPressCreate" />
					<Button icon="{i18n>refreshIcon}" press="onRefresh" />
				</Toolbar>
			</headerToolbar>

			<columns>
				<Column id="nameColumn">
					<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle" />
				</Column>
				<Column id="documentDateColumn">
					<Text text="{i18n>tableDocumentDateColumnTitle}" id="documentDateColumnTitle" />
				</Column>
				<Column id="plantTextColumn">
					<Text text="{i18n>tablePlantTextColumnTitle}" id="plantTextColumnTitle" />
				</Column>
				<Column id="regionTextColumn">
					<Text text="{i18n>tableRegionTextColumnTitle}" id="regionTextColumnTitle" />
				</Column>
				<Column id="descriptionColumn">
					<Text text="{i18n>tableDescriptionColumnTitle}" id="descriptionColumnTitle" />
				</Column>
				<Column id="createdColumn">
					<Text text="{i18n>tableCreatedColumnTitle}" id="createdColumnTitle" />
				</Column>
				<Column width="4%" />
			</columns>


		</Table>
	</Page>


</mvc:View>