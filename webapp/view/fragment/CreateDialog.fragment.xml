<c:FragmentDefinition xmlns="sap.m" xmlns:c="sap.ui.core">
    <Dialog beforeOpen="onDialogBeforeOpen" id="createEntryDialog" class="sapUiContentPadding" title="{i18n>createEntryDialogTitle}">
        <content>
            <VBox>
                <VBox>
                    <Label text="{i18n>documentNumberLabel}" labelFor="idDocumentNumber"></Label>
                    <Input id="idDocumentNumber" value="{DocumentNumber}"></Input>
                </VBox>
                <VBox>
                    <Label text="{i18n>documentDateLabel}" labelFor="idDocumentDate"></Label>
                    <DatePicker id="idDocumentDate" value="{
                        path: 'DocumentDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            pattern: 'yyyy-MM-dd',
                            UTC: true
                        }
                    }" change="handleChange" />
                </VBox>
                <VBox>
                    <Label text="{i18n>descriptionLabel}" labelFor="idDescription"></Label>
                    <TextArea rows="3" maxLength="256" id="idDescription" value="{Description}" width="100%" />
                </VBox>
                <VBox>
                    <Label text="{i18n>plantTextLabel}" labelFor="idPlantText"></Label>
                    <Input id="idPlantText" value="{PlantText}"></Input>
                </VBox>
                <VBox>
                    <Label text="{i18n>regionTextLabel}" labelFor="idRegionText"></Label>
                    <Input id="idRegionText" value="{RegionText}"></Input>
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button type="Accept" text="{i18n>createButton}" press="onSavePress"/>
        </beginButton>
        <endButton>
            <Button type="Reject" text="{i18n>cancelButton}" press="onPressCancel"/>
        </endButton>
    </Dialog>
</c:FragmentDefinition>
